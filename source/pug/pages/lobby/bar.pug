-
  const bar = {
    title: `
      про бар
    `,
    image: {
      webp: {
        mobile: 'bar-bg',
        tablet: 'bar-bg',
        desktop: 'bar-bg',
      },
      jpg: {
        mobile: 'bar-bg',
        tablet: 'bar-bg',
        desktop: 'bar-bg',
      },
    },
    text: `
      Заради наших гостей ми зробили колоборацію з комплексом для відпочинку Starfit.
      Наші гості можуть компліментарно користуватись усією інфраструктурою: басейн, тренажерний зал, сауни
    `,
    more: {
      text: 'меню',
      link: '#',
    },
    book: {
      text: 'забронювати',
      link: '#',
    },
    sectionName: 'bar',
  };

section.bar
  div.bar__container.container
    div.bar__top
      h2.title-inner.bar__title
        | !{bar.title}

      div.bar__img-wrapper
        +img('bar', pageName, bar.image.jpg.mobile, bar.title)

    div.bar__bottom
      div.bar__content
        p.bar__text
          | !{bar.text}

      div.bar__buttons
        if bar.more.text !== ''
          a(class="bar__button button" href="" + bar.more.link)
            | !{bar.more.text}

        if bar.book.text !== ''
          a(class="bar__button button" href="" + bar.book.link)
            | !{bar.book.text}
