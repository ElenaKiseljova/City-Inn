ul(class="social social--" + classSocialDirection)
  each val, index in social
    li(class="social__item social__item--" + classSocialDirection)
      if val === 'lang'
        a(class="social__link social__link--" + pageName href="#" aria-label= val)
          span= anotherLang
      else
        a(class="social__link social__link--" + pageName href="#" aria-label= val target="_blank")
          svg(width="48" height="48")
            use(xlink:href="img/sprites/sprite-mono.svg#icon-" + val)
