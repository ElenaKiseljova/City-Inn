ul(class="social social--"+classSocialDirection)
  each val, index in social
    li(class="social__item social__item--" + classSocialDirection)
      a(class="social__link button button--circle button--" + classSocialColor href="#" aria-label= val)
        if val === 'lang'
          span= anotherLang
        else
          svg(width="24" height="24")
            use(xlink:href="img/sprites/sprite-mono.svg#icon-" + val)
